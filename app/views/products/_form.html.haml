= form_for @product do |f|
  -if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name

  .field
    = f.label :manufacturers
    = f.collection_select :manufacturer_ids, Manufacturer.order(:name), :id, :name, {}, {multiple: false, class: "chzn-select", "data-placeholder" => "Select Manufacturers..."}
  .actions
    = f.submit 'Save'
